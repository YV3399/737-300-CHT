<?xml version="1.0"?> 
<PropertyList>   
  <name>lightcontrol</name>
  <layout>vbox</layout>   

        <text>
		<label>733 Light Controller</label>
	</text>

  <group>
    <layout>table</layout>
    <text>
      <label>Lights</label>
      <row>0</row>
      <col>0</col>
    </text>
    <button>
      <row>0</row>
      <col>3</col>
      <pref-width>16</pref-width>
      <pref-height>16</pref-height>
      <legend>x</legend>
      <default>1</default>
      <keynum>27</keynum>
      <border>2</border>
      <binding>
	<command>dialog-close</command>
      </binding>
    </button>
  </group>

  <hrule/>   

  <group>
    <layout>hbox</layout>

    <group>
      <layout>vbox</layout>
      <halign>center</halign> 
      <valign>top</valign>

      <text>
	<halign>left</halign>
	<label>Landing Lights - Fixed</label>
      </text>

      <checkbox>
	<halign>left</halign>
	<label>Left</label> 
	<property>/controls/lighting/landing-lights-fixed-left</property> 
	<binding> 	
	  <command>property-toggle</command>
	  <property>/controls/lighting/landing-lights-fixed-left</property>
	</binding>
	<binding> 	
	  <command>property-toggle</command> 	
	  <property>/sim/sound/switch</property> 	
	</binding>
	<live>true</live> 		
      </checkbox>

      <checkbox>
	<halign>left</halign>
	<label>Right</label> 
	<property>/controls/lighting/landing-lights-fixed-right</property> 
	<binding> 	
	  <command>property-toggle</command>
	  <property>/controls/lighting/landing-lights-fixed-right</property>
	</binding>
	<binding> 	
	  <command>property-toggle</command> 	
	  <property>/sim/sound/switch</property> 	
	</binding>
	<live>true</live> 		
      </checkbox>

      <text>
	<halign>left</halign>
	<label>Landing Lights - Retractable</label>
      </text>

